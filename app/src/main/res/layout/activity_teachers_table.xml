<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teachers_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/y2"
    tools:context="com.example.nonhlanhla.sqlitedb.TeachersTableActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:weightSum="1">


        <TextView
            android:text="Data entry: Teachers Portal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/textViewTitle"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:textColor="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="369dp"
            android:layout_height="wrap_content">


            <TextView
                android:text="Id:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:text="Name: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textView5"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextName"
                android:hint="enter name"
                android:layout_alignBaseline="@+id/textViewName"
                android:layout_alignBottom="@+id/textViewName"
                android:layout_alignEnd="@+id/editTextId"
                android:layout_marginTop="10dp"/>


            <TextView
                android:text="Surname:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textViewSurname"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextSurname"
                android:hint="enter surname"
                android:layout_alignBaseline="@+id/textViewSurname"
                android:layout_alignBottom="@+id/textViewSurname"
                android:layout_toEndOf="@+id/textViewSurname" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextId"
                android:hint="enter  id no. to update/delete"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/textView5" />

        </RelativeLayout>

        <TextView
            android:text="Subjects"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textViewSubjects"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:textAllCaps="false"
            android:textStyle="normal|bold" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="Mathematics:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewMarks"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextPhysical"
                android:hint="enter marks"
                android:layout_alignBaseline="@+id/textViewPhysical"
                android:layout_alignBottom="@+id/textViewPhysical"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Physical Sciences:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPhysical"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textViewMarks"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Life Sciences:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLife"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textViewPhysical"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextLife"
                android:hint="enter marks"
                android:layout_alignBaseline="@+id/textViewLife"
                android:layout_alignBottom="@+id/textViewLife"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="29dp" />


            <TextView
                android:text="Geography:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewGeography"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textViewLife"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="English:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewEnglish"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textViewGeography"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextEnglish"
                android:hint="enter marks"
                android:layout_alignBaseline="@+id/textViewEnglish"
                android:layout_alignBottom="@+id/textViewEnglish"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="Afrikaans:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewAfrikaans"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textViewEnglish"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="Life Orientation:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewOrientation"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/textViewAfrikaans"
                android:layout_alignParentEnd="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextOrientation"
                android:hint="enter marks"
                android:layout_marginStart="12dp"
                android:layout_alignBaseline="@+id/textViewOrientation"
                android:layout_alignBottom="@+id/textViewOrientation"
                android:layout_alignStart="@+id/editTextLife" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextGeography"
                android:hint="enter marks"
                android:layout_marginEnd="23dp"
                android:layout_above="@+id/textViewEnglish"
                android:layout_alignEnd="@+id/editTextLife" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextAfrikaans"
                android:hint="enter marks"
                android:layout_marginEnd="12dp"
                android:layout_alignBaseline="@+id/textViewAfrikaans"
                android:layout_alignBottom="@+id/textViewAfrikaans"
                android:layout_alignEnd="@+id/editTextGeography" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextMarks"
                android:hint="enter mark"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/editTextLife" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Comments:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewComments"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextComments"
                android:hint="enter comments"
                android:layout_alignBaseline="@+id/textViewComments"
                android:layout_alignBottom="@+id/textViewComments"
                android:layout_toRightOf="@+id/textViewComments"
                android:layout_toEndOf="@+id/textViewComments" />

            <TextView
                android:text="Examiner:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewExaminer"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/textViewComments"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"/>


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextExaminer"
                android:hint="enter examiner name"
                android:layout_alignBaseline="@+id/textViewExaminer"
                android:layout_alignBottom="@+id/textViewExaminer"
                android:layout_toEndOf="@+id/textViewExaminer" />

            <TextView
                android:text="Average: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_below="@+id/editTextExaminer"
                android:layout_alignStart="@+id/textViewExaminer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/TextViewTotal"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/editTextExaminer" />

        </RelativeLayout>


            <Button
                android:text="Add Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnAdd"
                android:layout_alignParentLeft="true"
                android:onClick="AddData"
                android:layout_alignParentStart="true"
                android:background="@drawable/btn_style"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent" />


            <Button
                android:text="View Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnView"
                android:layout_alignParentLeft="true"
                android:onClick="ViewData"
                android:layout_alignParentStart="true"
                android:background="@drawable/btn_style"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent" />

            <Button
                android:text="Update Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnUpdate"
                android:layout_above="@+id/btnDelete"
                android:layout_alignParentLeft="true"
                android:onClick="UpdateData"
                android:layout_alignParentStart="true"
                android:background="@drawable/btn_style"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent" />

            <Button
                android:text="Delete Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnDelete"
                android:onClick="DeleteData"
                android:layout_below="@+id/btnAdd"
                android:layout_alignParentStart="true"
                android:background="@drawable/btn_style"
                android:layout_marginBottom="30dp"
                android:textColor="@color/colorAccent"
                android:textAllCaps="false" />


    </LinearLayout>
</ScrollView>
</LinearLayout>
